<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:id="@+id/border_thumbnail_user_room"
        android:background="@drawable/img_circle_border_green">

        <ImageView
            android:id="@+id/image_thumbnail_user_room"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_placeholder_profile_round"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_name_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        tools:text="David"/>
</LinearLayout>