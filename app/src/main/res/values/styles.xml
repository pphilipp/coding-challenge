<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionMenuTextColor">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Green" parent="Base.AppTheme.Green">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close_green</item>
    </style>

    <style name="AppTheme.Green.Window" parent="Base.AppTheme.Green"/>

    <style name="Base.AppTheme.Green" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- android:textColorPrimary is the  color of the title text in the Toolbar, in the Theme.AppCompat theme:  -->
    <!--<style name="TabLayout" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/accent</item>
    </style>-->

    <style name="Toolbar.Main" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the  color of the title textin the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="fontPath">fonts/Nunito-Bold.ttf</item>
    </style>

    <style name="TabLayout.Main" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/green_700</item>
        <item name="fontPath">fonts/Nunito-Bold.ttf</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CollapsingToolbarAppearanceGreen" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="fontPath">fonts/Nunito-Bold.ttf</item>
    </style>

    <style name="CollapsingToolbarAppearanceSearchExpanded" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_collapsing_toolbar_search_expanded</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="fontPath">fonts/Nunito-Bold.ttf</item>
    </style>

    <style name="CollapsingToolbarAppearanceSearchCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_collapsing_toolbar_search_collapsed</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="fontPath">fonts/Nunito-Bold.ttf</item>
    </style>

</resources>
